#!/bin/bash
#
# oVirt Engine Backup Script
#
##### START CONFIG ###################################################

DIR=<%= @backup_dir %>
ROTATE=<%= [ @backup_rotate.to_i - 1, 0 ].max %>

PREFIX=engine_backup

##### STOP CONFIG ####################################################
PATH=/usr/bin:/usr/sbin:/bin:/sbin

set -o pipefail

cleanup()
{
    find "${DIR}/" -maxdepth 1 -type f -name "${PREFIX}*.tar.bz2" -mtime +${ROTATE} -print0 | xargs -0 -r rm -f
}

<% if @delete_before_backup -%>
cleanup

<% end -%>

engine-backup --mode=backup --scope=<%= @backup_scope %> --file=${DIR}/${PREFIX}_`date +%Y%m%d-%H%M%S`.tar.bz2 --log=${DIR}/${PREFIX}.log 1>/dev/null

<% unless @delete_before_backup -%>
if [ $? -eq 0 ] ; then
    cleanup
fi
<% end -%>
